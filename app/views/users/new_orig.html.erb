<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, "Confirm" %>:
    <%= f.password_field :password_confirmation, :size=>40 %>
  </p>
 
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label "Facebook Authorization" %><br />
    <%= f.check_box :fb_auth %>
  </p>
  
  <p>
    <%= f.label 'Twitter Authorization' %><br />
    <%= f.check_box :tw_auth %>
  </p>


  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>